@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";

}
<h1 class="mt-4">Sertifika Ekle</h1>

<ol class="breadcrumb mb-4">
   
    <li class="breadcrumb-item"><a href="/Admin/Certificates/Index">Sertifika</a></li>
    <li class="breadcrumb-item active">Yeni Bilgi Ekle</li>
</ol>

<div class="col-12" ng-app="CertificatesAddApp" ng-controller="CertificatesAddController">

    <div class="form-group">
        <label>Başlık Giriniz:</label>
        <input class="form-control" ng-model="certificates.title" />
    </div> 
    <div class="form-group">
        <label>Sertifika1 Giriniz:</label>
        <input class="form-control" ng-model="certificates.certificate1" />
    </div> 
    <div class="form-group">
        <label>Sertifika2 Giriniz:</label>
        <input class="form-control" ng-model="certificates.certificate2" />
    </div>

    <div class="form-group">
        <label>Sertifika3 Giriniz:</label>
        <input class="form-control" ng-model="certificates.certificate3" />
    </div>
    <div class="form-group">
        <label>Sertifika4 Giriniz:</label>
        <input class="form-control" ng-model="certificates.certificate4" />
    </div>
    <div class="form-group">
        <label>Sertifika5 Giriniz:</label>
        <input class="form-control" ng-model="certificates.certificate5" />
    </div>
    <div class="form-group">
        <label>Sertifika6 Giriniz:</label>
        <input class="form-control" ng-model="certificates.certificate6" />
    </div>

    <div class="form-group">
        <a ng-click="CertificatesAdd()" class="btn btn-primary">Kaydet</a>
    </div>


</div>

@section Scripts{
        <script src="~/Admin/pages/certificatesAdd.js"></script>
}
