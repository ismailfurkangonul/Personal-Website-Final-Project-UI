@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1 class="mt-4">Eğitim Ekle</h1>

<ol class="breadcrumb mb-4">
   
    <li class="breadcrumb-item"><a href="/Admin/Education/Index">Eğitim</a></li>
    <li class="breadcrumb-item active">Yeni Eğitim Ekle</li>
</ol>

<div class="col-12" ng-app="EducationAddApp" ng-controller="EducationAddController">

    <div class="form-group">
        <label>Başlık Giriniz:</label>
        <input class="form-control" ng-model="education.title" />
    </div>
    <div class="form-group">
        <label>Lise Adı Giriniz:</label>
        <input class="form-control" ng-model="education.schoolname1" />
    </div>
    <div class="form-group">
        <label>Lise Altyazı Giriniz:</label>
        <input class="form-control" ng-model="education.schoolsubtitle1" />
    </div>

    <div class="form-group">
        <label>Üniversite Adı Giriniz:</label>
        <input class="form-control" ng-model="education.schoolname2" />
    </div>
    <div class="form-group">
        <label>Üniversite Altyazı Giriniz:</label>
        <input class="form-control" ng-model="education.schoolsubtitle2" />
    </div> 
    <div class="form-group">
        <label>Lise Resmi Ekleyin</label>
        <input class="form-control" ng-model="education.image" />
    </div>
        <div class="form-group">
        <label>Üniversite Resmi Ekleyin</label>
        <input class="form-control" ng-model="education.image1" />
    </div>

    <div class="form-group">
        <a ng-click="EducationAdd()" class="btn btn-primary">Kaydet</a>
    </div>


</div>

@section Scripts{
    <script src="~/Admin/pages/educationAdd.js"></script>
}