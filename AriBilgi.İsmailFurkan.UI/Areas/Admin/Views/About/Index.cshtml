@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1 class="mt-4">Hakkımda</h1>
<div class="row mb-2">
 <div class="col-sm-6">
 </div>
  <div class="col-sm-6">
 <ol class="breadcrumb float-sm-right">
 
 <li class="breadcrumb-item active"><a href="/Admin/About/Index">Hakkımda</a></li>
  
 </ol>
        
        
  </div>
 </div>
<div class="container-fluid" ng-app="AboutApp" ng-controller="AboutController">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="float-right">
            <a href="/Admin/About/Add" class="btn btn-primary" style=" right: 20px;
        bottom: 20px;">Yeni Ekle</a>
        </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                       <thead>
                    <tr>
                        <th>Id</th>
                        <th>Ad</th>
                        <th>Meslek</th>
                        <th>Açıklama</th>
                        <th>Sosyal</th>
                        <th>Resim</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    <tr ng-repeat="about in AboutList">
                        <td>
                            {{about.id}}
                        </td>
                        <td>
                            {{about.name}}
                        </td>
                        <td>
                            {{about.job}}
                        </td>
                        <td>
                            {{about.explain}}
                        </td>
                        <td>
                            {{about.social}}
                        </td>
                        <td>
                            {{about.image}}
                        </td>
                       
                        <td>
                            <a ng-click="AboutDelete(about.id)" class="btn-sm btn-danger">Sil</a>  
                            <a href="/Admin/About/Edit?Id={{about.id}}" class="btn-sm btn-warning">Düzenle</a>
                        </td>
                    </tr>
                </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>

@section Scripts{
    <script src="~/Admin/pages/about.js"></script>
}