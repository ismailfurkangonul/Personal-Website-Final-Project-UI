@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Hakkımda Düzenle</h1>

<ol class="breadcrumb mb-4">
    
    <li class="breadcrumb-item"><a href="/Admin/About/Index">Hakkımda</a></li>
    <li class="breadcrumb-item active">Hakkımda Düzenle</li>
</ol>

<div class="col-12" ng-app="AboutEditApp" ng-controller="AboutEditController">

    <div class="form-group">
        <label> Adınızı giriniz:</label>
        <input class="form-control" ng-model="about.name" />
    </div> 
    <div class="form-group">
        <label> Meslek giriniz:</label>
        <input class="form-control" ng-model="about.job" />
    </div>
    <div class="form-group">
        <label> Açıklama giriniz:</label>
        <input class="form-control" ng-model="about.explain" />
    </div>
    <div class="form-group">
        <label> Sosyal Medya Giriniz:</label>
        <input class="form-control" ng-model="about.social" />
    </div> 
    <div class="form-group">
        <label> Fotoğraf Ekleyiniz:</label>
        <input class="form-control" ng-model="about.image" />
    </div>
   
    <div class="form-group">
        <a ng-click="AboutEdit()" class="btn btn-primary">Kaydet</a>
    </div>


</div>

@section Scripts{
    <script src="~/Admin/pages/aboutEdit.js"></script>
}